@import 'nib'

global-reset()

body
  color #333
  font 15px/22px sans-serif

main
  margin 0 1%

footer
  border-top 1px solid #333
  overflow auto

footer p
  float right

footer p + p
  float left

p
  margin 0

.row
  clear both
  margin 0
  padding 0

.row:before, .row:after
  content ""
  display table

.row:after
  clear both

.col
  display block
  float left
  margin 1% 0 1% 1%

  @media only screen and (max-width: 720px)
    margin 1% 0

.col:first-child
  margin-left 0

.span_2_of_2
  width 100%

.span_1_of_2
  width 49.5%

  @media only screen and (max-width: 720px)
    width 100%

.button
  background-image linear-gradient(top, #fff8, #fffa)
  background-color #ccc
  border 1px solid #333
  border-radius 6px
  box-shadow inset 0 1px 0 #fff8, 0 1px 1px #0002, -1px 2px 3px #0003
  color #333
  display block
  font 15px/28px sans-serif
  height 30px
  margin 0 0 1rem
  padding 0
  text-align center
  text-shadow 0 1px 0 #fff0
  width 100%

  &:hover
    cursor pointer

  &:active
    background-color darken(#d3d3d3, 5%)
    box-shadow inset 0 1px 2px #0002

  &.button-pressed
    background-color #c4df9b
    border-color #598527
    color #314121

.hidden-form-control
  width 0.1px
  height 0.1px
  opacity 0
  overflow hidden
  position absolute
  z-index -1

.spinner
  height 100%
  @keyframes spinner-animation {
    to {transform: rotate(360deg);}
  }

  .spinner-animation:before
    content ''
    box-sizing border-box
    position absolute
    top 50%
    left 50%
    width 20px
    height 20px
    margin-top -10px
    margin-left -10px
    border-radius 50%
    border 2px solid #ccc
    border-top-color #333
    animation: spinner-animation .6s linear infinite

  .spinner-container
    position relative
    height 100%

#audio-selection
  border-bottom 1px solid #ccc
  overflow auto

#audio-selection p
  margin 0 0 1rem

#audio-selection fieldset
  margin 0 0 0.3rem

#audio-selection fieldset input[type=radio]
  display block

#audio-selection fieldset label.button
  display block
  float left
  margin 0 1rem 0 0
  width 20%

#transcript-pane, #entity-pane
  height 70vmin
  overflow scroll

#transcript-pane p
  margin 0 0 1rem

#entity-pane
  background-color #f6f6f6

#entity-pane iframe
  display block
  height 100%
  width 100%
